---
title: Order page
slug: orders
handle: account_index
position: 99
listed: false
published: true
is_layout: false
seo_title: My sales orders | Space Discount
---
{% extends 'layouts/account' %}
{% block 'content/tabcontent' %}
  {% paginate store.sales by 4 %}
    <div class="row">
      <div class="col-12">
      {%if store.orders == null or store.orders.size == 0 %}
        <div class="text-right">
          {%include 'paginate' with paginate %}
        </div>
        {% for sale in paginate.collection %}
          <div class="card">
            <div class="card-header">
              <div class="row">
                <div class="col-6 col-sm-4">
                  <span class="text-primary font-weight-bold">{{sale.name}}</span>
                  <span class="badge badge-dark ">{{ sale.state }}</span>
                </div>
                <div class="col-6 col-sm-4">
                  {{sale.date_order  | date:"%d/%m/%Y" }}
                </div>
                <div class="col-6 col-sm-4">
                  <div >
                    <i class="fa fa-map-marker text-primary"></i>
                    {{ "account_order_address" | translate }}
                    <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      {{sale.partner_shipping.display_name}}
                    </button>
                    <div class="dropdown-menu p-2 small" aria-labelledby="dropdownMenuButton">
                      <strong>{{sale.partner_shipping.display_name}}</strong>
                      <div>{{sale.partner_shipping.street}}</div>
                      <div>{{sale.partner_shipping.street2}}</div>
                      <div>
                        {{sale.partner_shipping.zip}}
                        {{sale.partner_shipping.city}}
                      </div>
                      <div>{{sale.partner_shipping.country_id.name}}</div>
                      <div>{{sale.partner_shipping.phone}}</div>
                    </div>
                  </div>
                </div>
                {% if sale.carrier_id %}
                <div class="col-6 col-sm-4">
                  <i class="fa-li fa fa-truck text-primary"></i>
                  {{ "account_order_shipping" | translate }}
                  {{sale.carrier_id.name}}
                  {% for track in sale.tracking %}
                    <div>
                      <a href="{{track.url}}">
                        {{"account_order_tracking" | translate }} {{track.value}}
                      </a>
                    </div>
                  {% endfor %}
                </div>
                {% endif %}
                <div class="col">
                  <div class="font-weight-bold">
                    {{sale.amount_total | money }}
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body">
            {% for line in sale.order_line %}
              <div class="row border border-top-0 border-left-0 border-right-0 pb-4">
                <div class="col-4 col-sm-2">
                  <img src="{{line.product.images.first.small}}" alt="{{line.product.name}}" class="img-fluid"/>
                </div>
                <div class="col-8 col-sm-10">
                  <a href="{{line.product.url_key}}" target="_blank">{{line.product.name}}</a>
                  <div class="small">
                    {{ 'account_order_qty' | translate }}
                    <b>{{line.product_uom_qty | round}}</b>
                  </div>
                  <div class="small">
                    {{ 'account_order_subtotal' | translate }}
                    <b>{{line.price_subtotal_gross | money}}</b>
                  </div>
                </div>

              </div>

            {% endfor%}
            </div>
          </div>
        {% endfor %}
        <div class="text-right">
          {%include 'paginate' with paginate %}
        </div>
      {% else %}
        <div class="text-center">
          {{ 'account_order_empty' | translate }}
        </div>
      {% endif %}
      </div>
    </div>
  {% endpaginate %}
{% endblock %}
