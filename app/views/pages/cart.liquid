---
title: My shopping cart | Space discount
published: true
listed: false
handle: cart_index
slug: cart
---
{% extends 'layouts/checkout' %}

{% block "content/main" %}


  <div class="row" data-shopinvader-container id="cart-index">
  {% if store.cart.item_number > 0%}
    <div class="col-lg-8 col-xl-9">
      {% include 'cart_list' %}
    </div>
    <div class="col-lg-4 col-xl-3 mb-4">
      {% include 'cart_total' %}
      <form method="post" action="{% path_to cart_login %}"  id="cart_update_form">
        <input type="hidden" name="action_proxy" value="cart">
        <input type="hidden" name="action_method" value="PUT">
        <input type="hidden" name="current_step" value="{{ page.handle }}">
        <input type="hidden" name="next_step" value="cart_login">
        <button class="btn btn-primary text-lg btn-lg  btn-block btn-block-xs" type="submit">
          {% editable_text checkout_button, fixed: true, rows: 1 %}
            Continuer <i class="fa fa-angle-right"></i>
          {% endeditable_text %}
        </button>
      </form>
    </div>
    <div class="col-lg-9 col-xl-12">
      {% editable_text "cart_help", hint: "Cart help message" %}
      <strong>Questions? We can help</strong>
      <div class="">
        Online Customer Support: <br>
        +33 (0)1 00 00 00 07
        <br><br>
        Email : contact@spacediscount.yeah
      </div>

      {% endeditable_text %}
    </div>

    {% else %}
      <div class="container">
        <div class="row">
          <div class="col-12">
            {% editable_text "cart_empty", hint: "Cart empty" %}
            Your shopping cart is empty :(
            {% endeditable_text %}
            <div class="text-center">
              <a href="{% path_to home%}" class="btn btn-lg btn-primary">
                {{'cart_continue_shopping' | translate}}
                <i class="fa fa-chevron-right"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
    </div>
  </div>

{% endblock %}
