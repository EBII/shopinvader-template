---
title: Home page
published: true
handle: home

---
{% extends 'layouts/simple' %}

{% block content/main %}


<div class="row pt-4 justify-content-center ">
  <div class="container pt-4  pb-4 ">
    <div class="row">
      <div class="col-12">
        <h2 class="text-primary">
        {% editable_text "bestseller_title", hint: "Bestseller title in homepage" %}
         <span class="text-warning">Today's</span> Deals
        {% endeditable_text %}
        </h2>
      </div>
    </div>
    <div class="row align-items-stretch justify-content-center align-items-stretch">
      {% with_scope main: true %}
        {% paginate store.products by 12%}
          {% for product in paginate.collection %}
            <div class="col-12 col-sm-12 col-md-4 col-lg-3 col-xl-2 p-2  ">
              {% include 'product_thumbnail' with product %}
            </div>
          {% endfor %}
        {% endpaginate %}
      {% endwith_scope %}
    </div>
  </div>

</div>
  {% if contents.posts.size > 0 %}
  <div class="container">
    <div class="row" id="posts">
      <div class="col-12 text-center">
        <h2 class="h2">
        {% editable_text post_title %}
          <span class="text-primary">Space</span> <span class="text-danger">Discount</span>
          <div class="small text-dark">Mission Report</div>
