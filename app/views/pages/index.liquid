    </div>
  </div>
  <div class="row row-same-height">
    {% with_scope main_post: true %}
    <div class="col-xs-2 col-sm-6 col-md-5 col-lg-6 hidden-xs">
      {% include "post_thumbnail" with post: contents.posts.first %}
    </div>
    {%endwith_scope%}
    <div class="col-xs-12 col-sm-6 col-md-7 col-lg-6">
      <div class="row row-same-height">
      {% with_scope main_post: null %}
        {% for post in contents.posts %}
          <div class="col-xs-6 col-md-6">
            {% include "post_thumbnail" with post %}
          </div>
        {% endfor %}
      {%endwith_scope%}
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row">
    <div class="col-lg-12">
      <h2 class="title-decorator">
      {% editable_text "blog_title", hint: "Blog post title in homepage" %}
      Our products reviews for you
      {% endeditable_text %}
      </h2>
    </div>
  </div>
