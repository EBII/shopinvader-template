---
title: Home page
published: true
handle: home
editable_elements:
  content/main/bestseller_title: Tous les meilleurs produits de la galaxie
  content/main/blog_title: Nos tests produits
  content/main/main_title: Des milliers de solutions pour la maison
---
{% extends 'layouts/simple' %}

{% block content/main %}


<div class="row">
  <div class="col-xs-12">
    <h1>
      {% editable_text "main_title", hint: "Bestseller title in homepage" %}
      Thousands solutions for home
      {% endeditable_text %}
    </h1>
    <div class="row">
      <div class="col-xs-12">
        <div class="carousel slide carousel-multi-item"  id="categories-carousel">
          <div class="carousel-inner">
          {% for category in store.categories %}
            <div class="item {%if forloop.index0 == 0%}active{% endif %}">
              {% include 'category_thumbnail' with category %}
            </div>
          {% endfor %}
          </div>
          <a class="left carousel-control" href="#categories-carousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
          <a class="right carousel-control" href="#categories-carousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <h2 class="title-decorator">
    {% editable_text "bestseller_title", hint: "Bestseller title in homepage" %}
    Our galactic recommandations
    {% endeditable_text %}
    </h2>
  </div>
</div>
<div class="row dev row-same-height">
  {% paginate store.products by 8%}
    {% for product in paginate.collection %}
      <div class="product-thumbnail col-xs-12 col-sm-4 col-md-3 col-lg-2">
        {% include 'product_thumbnail' with product %}
      </div>
    {% endfor %}
  {% endpaginate %}
</div>
  {% if contents.posts.size > 0 %}
  <div class="row" id="posts">
    <div class="col-xs-12 text-center">
      <h2 class="text-size-5xl">
      {% editable_text post_title %}
        <span class="text-primary ">Space</span> <span class="text-danger">Discount</span> <div class="text-size-lg">Mission Report</div>
      {% endeditable_text %}
      </h2>
