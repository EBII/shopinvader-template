---
title: Simple
is_layout: true
---
{% extends 'layouts/default' %}

{% block content %}


  <div class="row store-advantage text-size-1xl text-uppercase text text-center text-primary">
    <div class="col-xs-3 text-center ">
      <span class="fa-stack fa-lg text-danger">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-rocket fa-stack-1x fa-inverse"></i>
      </span>
      <div class="">
        {{'store_advantage_shipping' | translate }}
      </div>

    </div>
    <div class="col-xs-3 text-center">
      <span class="fa-stack fa-lg text-danger">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-refresh fa-stack-1x fa-inverse"></i>
      </span>
      <div class="">
        {{'store_advantage_return' | translate }}
      </div>
    </div>
    <div class="col-xs-3 text-center">
      <span class="fa-stack fa-lg text-danger">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-tag fa-stack-1x fa-inverse"></i>
      </span>
      <div class="">
        {{'store_advantage_price' | translate }}
      </div>
    </div>
    <div class="col-xs-3 text-center ">
      <span class="fa-stack fa-lg text-danger">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-volume-control-phone fa-stack-1x fa-inverse"></i>
      </span>
      <div class="">
        {{'store_advantage_hotline' | translate }}
      </div>
    </div>
  </div>

  <div class="row">
  {% if content.slides.size > 0%}
    <div class="col-xs-12" id="slider">
      <div class="carousel slide" id="main-carousel">
        <div class="carousel-inner">
        {% for slide in content.slides%}
          <div class="{%if forloop.index0 == 0%}active{%endif%} item" data-slide-number="{{forloop.index0}}">
            <a href="{{slide.link}}"><img src="{{slide.picture.url}}" alt="{{slide.name}}"></a>
          </div>
        {% endfor %}
        </div>
      {% if content.slides.size > 1%}
        <a class="left carousel-control" href="#main-carousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#main-carousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      {% endif %}
      </div>
    </div>
  {% endif %}
  </div>
  {% block main %}
  {% endblock %}
{% endblock %}
