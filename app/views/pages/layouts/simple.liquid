---
title: Simple
is_layout: true
---
{% extends 'layouts/default' %}

{% block content %}
  <div class="row">
  {% if contents.slides.size > 0%}
    <div class="col-12 text-center" id="slider">
      <div class="carousel slide" id="main-carousel">
        <div class="carousel-inner">
        {% for slide in contents.slides%}
          <div class="{%if forloop.index0 == 0%}active{%endif%} item" data-slide-number="{{forloop.index0}}">
            <a href="{{slide.link}}"><img src="{{slide.picture.url}}" alt="{{slide.name}}" class="w-100"></a>
          </div>
        {% endfor %}
        </div>
      {% if contents.slides.size > 1%}
        <a class="left carousel-control" href="#main-carousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#main-carousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      {% endif %}
      </div>
    </div>
  {% endif %}
  </div>
  <div class="row store-advantage text-uppercase text text-center text-primary pt-4 pb-4 mb-4">
    <div class="col-3 text-center ">
      <span class="fa-stack fa-lg text-danger fa-2x">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-rocket fa-stack-1x fa-inverse"></i>
      </span>
      <div class="">
        {{'store_advantage_shipping' | translate }}
      </div>
    </div>
    <div class="col-3 text-center">
      <span class="fa-stack fa-lg text-danger fa-2x">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-refresh fa-stack-1x fa-inverse"></i>
      </span>
      <div class="">
        {{'store_advantage_return' | translate }}
      </div>
    </div>
    <div class="col-3 text-center">
      <span class="fa-stack fa-lg text-danger fa-2x">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-tag fa-stack-1x fa-inverse"></i>
      </span>
      <div class="">
        {{'store_advantage_price' | translate }}
      </div>
    </div>
    <div class="col-3 text-center ">
      <span class="fa-stack fa-lg text-danger fa-2x">
        <i class="fa fa-circle fa-stack-2x"></i>
        <i class="fa fa-volume-control-phone fa-stack-1x fa-inverse"></i>
      </span>
      <div class="">
        {{'store_advantage_hotline' | translate }}
      </div>
    </div>
  </div>
  {% block main %}
  {% endblock %}
{% endblock %}
