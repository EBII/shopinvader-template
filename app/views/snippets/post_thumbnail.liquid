<a href="{% path_to post %}">
  <div class="post-thumbnail thumbnail">
    <img src="{{post.thumbnails.url | default: site.metafields.theme.noimage }}" alt="{{post.name}}">
    <div class="caption">
     <h3 class="text-size-md">{{post.name}}</h3>
     <p class="visible-lg">{{post.short_description}}</p>
    </div>
  </div>
</a>
