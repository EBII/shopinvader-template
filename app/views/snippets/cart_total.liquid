<div class="card">
  <div class="card-body">
    <h2 class="display-4">TOTAL</h2>
    <table class="table">
      <tbody>
        <tr>
          <td class="text-bold">
            <div class="text-size-lg">
              {{'cart_total_subtotal' | translate }}
          </td>
          <td class="text-bold text-right">
            {{cart.lines.amount.total | money }}
          </td>
        </tr>
        {% if cart.shipping.carrier != null%}
        <tr>
          <td class="">{{'cart_total_shipping' | translate }}</td>
          <td class="text-right">{{cart.shipping.amount.total | money }}</td>
        </tr>
        {%endif%}
        <tr>
          <td class="">
            <div class="h3 font-weight-bold  ">
              {{'cart_total_total' | translate }}
            </div>
            <div class="">
              {{'cart_total_vat' | translate }}
            </div>
          </td>
          <td class="text-right">
            <div class="h3 text-primary font-weight-bold ">
              {{cart.amount.total | money }}
            </div>
            <div class="">
              {{cart.amout.tax | money }}
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
